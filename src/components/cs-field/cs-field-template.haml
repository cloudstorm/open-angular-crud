/ CloudStorm Form Field component
/ Renders different kind of inputs for different types of items
.cs-field-inner
  %div{"ng-class" => "style('container')"}
    .inline.label-container{"ng-class" => "style('field1')"}
      %label.control-label {{field.label}}
      %span.req-star{ "ng-if" => "field.required", "ng-class" => "style('star')" } *
    %div{"ng-class" => "style('field2')"}
      .cs-input-wrapper
    %span.help-block{ "ng-if" => "field.errors.length > 0" }
      {{ getError(field) }}

    %span.help-block{ "ng-if" => "(!(field.errors.length > 0) && (getHint(field)))" }
      {{ getHint(field) }}

    .cover
