!!!
%html
  %head
    %meta{content: "width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no", name: "viewport"}
    :javascript
      window.current_user  = '{"id" : #{current_user.id}, "email" : "#{current_user.email}", "name": "#{current_user.name}", "roles": #{current_user.roles_for_group_names} }'
      window.current_env   = "#{Rails.env}"
      window.root_url      = "#{root_url}"
    %title ToDo List
    = stylesheet_link_tag "application"
    = stylesheet_link_tag "print", media: 'print'
    = javascript_include_tag "application"
    = csrf_meta_tags
    = favicon_link_tag 'favicon.ico'
  %body{ "ng-app" => "todoList", "ng-controller" => "MainCtrl", "ng-strict-di" => ""}

    = development_ribbon position: :left, color: :green, text: "Development" if Rails.env.development?

    = development_ribbon position: :left, color: :orange, text: "Staging" if Rails.env.staging?

    = render 'layouts/navbar'
    = yield
    = render 'layouts/footer'
